
%table
  %tr
    %td
      Title: 
    %td
      = @game.title
  %tr
    %td
      Version:
    %td
      = @game.version
  %tr
    %td
      App Name:
    %td
      = @game.app_name
  %tr
    %td
      Description (TR):
    %td
      = @game.description_tr
  %tr
    %td
      Description (EN):    
    %td
      = @game.description_en

  - if @game.logo1x?
    %tr
      %td
        Logo@1x:
      %td
        = image_tag(@game.logo1x.url)

  - if @game.logo2x?
    %tr
      %td
        Logo@2x:
      %td
        = image_tag(@game.logo2x.url)
        
  - if @game.logo4x?
    %tr
      %td
        Logo@4x:
      %td
        = image_tag(@game.logo4x.url)
  %tr
    %td
      = link_to 'Edit', edit_game_path(@game)
  %tr
    %td
      = button_to "Delete #{@game.title}", game_path(@game), :method => :delete, :confirm => 'Are you sure?'
            
%br

= link_to 'All Games', games_path